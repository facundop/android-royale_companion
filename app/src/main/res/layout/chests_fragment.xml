<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChestsFragment">

    <Button
        android:id="@+id/get_upcoming_chests_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/get_upcoming_chests_button" />

    <ListView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/list_upcoming_chests"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/chests_list"
        app:layout_constraintTop_toBottomOf="@+id/get_upcoming_chests_button" />

</android.support.constraint.ConstraintLayout>